{
    "id": "org.kde.kweather",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kweather",
    "rename-icon": "kweather",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],

    "modules": [
        {
            "name": "kweathercore",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=RelWithDebInfo" ],
            "buildsystem": "cmake-ninja",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/kweathercore/0.5/kweathercore-0.5.tar.xz", 
                    "sha256": "162c69f758f2e9b1c1ef2b8d0c54f3cee439b4171ef32632df410411d30d4d6f" 
                } 
            ]
        },
        {
            "name": "kquickcharts",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=Release" ],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/frameworks/5.82/kquickcharts-5.82.0.tar.xz", 
                    "sha256": "86c6cde106c786fe3908e67847f2cbbb0324b96f5589c1a10ed67654660ec7fb"
                } 
            ]
        },
        {
            "name": "kweather",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=RelWithDebInfo" ],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/plasma-mobile/21.08/kweather-21.08.tar.xz", 
                    "sha256": "c5c572b38d6e74e15998273fcff9438711b0f6f550fe23908156f3a934973f2c" 
                },
                {
                    "type": "patch",
                    "path": "0001-force-breeze-icon-theme.patch"
                }
            ]
        }
    ]
}
